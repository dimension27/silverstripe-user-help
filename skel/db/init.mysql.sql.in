DROP DATABASE IF EXISTS @@DB_NAME@@;
CREATE DATABASE @@DB_NAME@@;
USE mysql;
DELETE FROM user WHERE User = '@@DB_USERNAME@@' AND Host = '@@DB_HOSTNAME@@';
INSERT INTO user (Host, User, Password) VALUES 
('@@DB_HOSTNAME@@', '@@DB_USERNAME@@', PASSWORD('@@DB_PASSWORD@@'));
FLUSH PRIVILEGES;
GRANT ALL ON @@DB_NAME@@.* TO '@@DB_USERNAME@@'@'@@DB_HOSTNAME@@';
GRANT FILE ON *.* TO '@@DB_USERNAME@@'@'@@DB_HOSTNAME@@';
FLUSH PRIVILEGES;
